# === Supabase Project Details ===
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_DB_PASSWORD=your_database_password
SUPABASE_PROJECT_ID=your_project_id

# === Postgres Connection (long-lived)
SUPABASE_DB_CONNECTION_URI=postgresql://postgres:password@db.project.supabase.co:5432/postgres

# === Postgres Pooler Connection (serverless)
SUPABASE_POOLER_URI=postgresql://postgres:password@aws-0-region.pooler.supabase.com:6543/postgres

# === Google OAuth Configuration ===
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_oauth_client_id

# === Security ===
JWT_SECRET=your_jwt_secret_key
ADMIN_SESSION_SECRET=your_admin_session_secret

# === Runtime Environment ===
NODE_ENV=development
NEXT_PUBLIC_ENV=local

# === Google Maps Configuration ===
NEXT_PUBLIC_USE_GOOGLE_DIRECTIONS=true